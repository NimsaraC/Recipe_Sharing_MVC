@model Recipe.Models.UserDash

@{
    ViewData["Title"] = "Details";
}

<h1 class="text-center mt-5">User Details</h1>
<hr />

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card shadow">
                <div class="card-body">
                    <h4 class="card-title">User Information</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-3">Name:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.User.Name)</dd>

                        <dt class="col-sm-3">Email:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.User.Email)</dd>

                        <dt class="col-sm-3">Bio:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.User.Bio)</dd>

                        <dt class="col-sm-3">Phone:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.User.Phone)</dd>
                    </dl>
                    <div class="text-center mt-4">
                        <a asp-action="Edit" asp-route-id="@Model?.User.Id" class="btn btn-primary">Edit Profile</a>
                        <a asp-controller="RecipeMs" asp-action="Index" class="btn btn-secondary ms-2">Back to Home</a>
                        <a asp-controller="RecipeMs" asp-action="Create" class="btn btn-success ms-2">Add Recipe</a>
                        <a asp-action="Logout" class="btn btn-danger ms-2">Logout</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <hr />

    <div class="row mt-4">
        <div class="col-12">
            <div class="section-heading">
                <h3>The Best Recipes</h3>
            </div>
        </div>
    </div>

    <div class="row mt-3">
        @foreach (var item in Model?.recipeMs ?? Enumerable.Empty<RecipeM>())
        {
            <div class="col-12 col-sm-6 col-lg-4">
                <div class="card mb-4 shadow">
                    <img src="/uploads/@item.ImageFileName" class="card-img-top" alt="Recipe Image">
                    <div class="card-body">
                        <h5 class="card-title">@item.Title</h5>
                        <div class="card-text">
                            <a asp-controller="RecipeMs" asp-action="DetailsUser" asp-route-id="@item.Id" class="btn btn-primary">View Details</a>
                        </div>
                        <div class="ratings mt-2">
                            <i class="fa fa-star" aria-hidden="true"></i>
                            <i class="fa fa-star" aria-hidden="true"></i>
                            <i class="fa fa-star" aria-hidden="true"></i>
                            <i class="fa fa-star" aria-hidden="true"></i>
                            <i class="fa fa-star-o" aria-hidden="true"></i>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
